USE=""

# Google USBPD peripheral firmwares
LINUX_FIRMWARE="cros-pd"

# WiFi and BT driver firmware
LINUX_FIRMWARE="${LINUX_FIRMWARE} iwlwifi-7265 ibt-hw"

# Enable DPTF
USE="${USE} dptf"

# Use ext4 crypto
USE="${USE} direncryption"

# Enable TPM2
USE="${USE} -tpm tpm2"

# Include prebuilt (&signed) CR50 FW
USE="${USE} cr50_onboard"
